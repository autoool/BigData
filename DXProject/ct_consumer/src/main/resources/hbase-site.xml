<configuration>
<property>
<name>hbase.rootdir</name>
<value>hdfs://192.168.243.129:9000/hbase</value>
</property>
<!-- 是否开启集群-->
<property>
<name>hbase.cluster.distributed</name>
<value>true</value>
</property>
<!-- 0.98 后的新变动，之前版本没有.port 默认端口为 60000-->
<property>
<name>hbase.master.port</name>
<value>16000</value>
</property>
<!-- zookeeper集群位置-->
<property>
<name>hbase.zookeeper.quorum</name>
<value>192.168.243.129:2181,192.168.243.130:2181,192.168.243.131:2181</value>
</property>
<!-- hbase的元数据信息存储在zookeeper的位置-->
<property>
<name>hbase.zookeeper.property.datadir</name>
<value>/root/hd/zookeeper-3.4.5/zkData</value>
</property>
</configuration>
